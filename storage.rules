rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload/download files in their own user folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Items files - users can access files for items they own
    match /items/{itemId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        firestore.exists(/databases/(default)/documents/items/$(itemId)) &&
        firestore.get(/databases/(default)/documents/items/$(itemId)).data.ownerUid == request.auth.uid;
    }

    // Public files (read-only for authenticated users)
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only functions can write to public
    }
  }
}