rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // function to check if doc belongs to user
    function belongsTo(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if belongsTo(userId);
    }

    // Categories - users can only access their own categories
    match /categories/{categoryId} {
      allow read, write: if belongsTo(userId);
    }

    // Items - users can only access their own items
    match /items/{itemId} {
      allow read, write: if belongsTo(userId);
      
      // Item activities subcollection
      match /activities/{activityId} {
        allow read, write: if belongsTo(userId);
      }
    }
  }
}